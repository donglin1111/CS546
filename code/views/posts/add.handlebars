<form class="newcar" method="POST">
    <label>
      Car VIN
      <input type="text" name="VIN" placeholder="Car VIN" value="" class="addcar-input"/>
    </label>
    <label>
      Car Brand
      <input type="text" name="Brand" placeholder="Car Brand" value="" class="addcar-input"/>
    </label>
    <label>
      Car Model
      <input type="text" name="Model" placeholder="Car Model" value="" class="addcar-input"/>
    </label>
    <label>
      Car type
      <input type="text" name="VehicleType" placeholder="Car type" value="" class="addcar-input"/>
    </label>
    <label>
      Time to market
      <input type="text" name="Timetomarket" placeholder="mm/dd/yyyy" value="" class="addcar-input"/>
    </label>
    <label>
      Color
      <input type="checkbox" name="Color" placeholder="Post Title" value="red" class="addcar-input"/>
      <input type="checkbox" name="Color" placeholder="Post Title" value="green" class="addcar-input"/>
      <input type="checkbox" name="Color" placeholder="Post Title" value="black" class="addcar-input"/>
      <input type="checkbox" name="Color" placeholder="Post Title" value="white" class="addcar-input"/>
      <input type="checkbox" name="Color" placeholder="Post Title" value="blue" class="addcar-input"/>
    </label>
    <button type="submit" id="butt1">submit</button>
</form>