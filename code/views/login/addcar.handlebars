<div class="user-panel">
    <h2>Logged in as: {{{user.lastname}}}</h2>
        <div class="col-sm-12">
            <form action="/login/addcar" class="newcar" method="POST">
                    <p><label>
                            Car VIN
                            <input type="text" name="VIN" placeholder="VIN" value="" class="addcar-input" />
                        </label>
                        <label>
                            Car Brand
                            <input type="text" name="Brand" placeholder="i.e Audi" value="" class="addcar-input" />
                        </label>
                        <label>
                            Car Model
                            <input type="text" name="Model" placeholder="i.e Q8" value="" class="addcar-input" />
                        </label>
                        <label>
                            Car type
                            <input type="text" name="VehicleType" placeholder="i.e Premium Plus" value="" class="addcar-input" />
                        </label>
                        <label>
                            Time to market
                            <input type="text" name="Timetomarket" placeholder="mm/dd/yyyy" value=""
                                class="addcar-input" />
                        </label></p>
                    <p><label>
                            Year
                            <input type="text" name="Years" placeholder="i.e 2020" value="" class="addcar-input" />
                        </label>
                        <label>
                            Exterior
                            <input type="text" name="Exterior" placeholder="i.e Red" value="" class="addcar-input" />
                        </label>
                        <label>
                            Interior 
                            <input type="text" name="Interior" placeholder="i.e Blue" value="" class="addcar-input" />
                        </label>
                        <label>
                            Style
                            <input type="text" name="Style" placeholder="i.e SUV" value="" class="addcar-input" />
                        </label>
                        <label>
                            Mileage
                            <input type="text" name="Mileage" placeholder="i.e 10000" value="" class="addcar-input" />
                        </label></p>
                    <p>
                        <label>
                            Price
                            <input type="text" name="Price" placeholder="i.e $20000" value="" class="addcar-input" />
                        </label>
                    </p>
                    <p><label>
                            Usedcar
                            <input type="radio" name="Usedcar" value="true" class="addcar-input" />Yes
                            <input type="radio" name="Usedcar" value="false" class="addcar-input" />No
                        </label></p>
                    <p><label>
                            Upload image
                            <input type="file" name="img" accept="image/*" class="addcar-input">
                        </label></p>
                    <p><button type="submit" id="butt1">submit</button></p>
            </form>
              {{#if hasErrors}}
                <ul class="error-list">
                    {{#each errors}}
                    <li>
                    {{this}}
                    </li>
                    {{/each}}
                </ul>
                {{/if}}
        </div>
</div>

