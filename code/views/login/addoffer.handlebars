	<div class="user-panel">
		<h2>Logged in as: {{{user.lastname}}}</h2>

	<div class="w3-container w3-teal">
  <article class="new-post">
  <form action="/login/addoffer" method="POST" class="new-post-form">
  <div class="offercontainer">
  <div class="row">
    <div class="col-25">
      <label for="fname">Title</label>
    </div>
    <div class="col-75">
      <input type="text" id="title" name="title" placeholder="Title.." value="{{post.title}}">
    </div>
  </div>
  <div class="row">
    <div class="col-25">
      <label for="subject">Information</label>
    </div>
    <div class="col-75">
      <textarea id="body" name="body" placeholder="Write something.." style="height:200px">{{post.body}}</textarea>
    </div>
  </div>
  <div class="row">
    <input type="submit" value="Submit">
    <input type="reset" value="Reset">
  </div>
</article>
  {{#if hasErrors}}
  <ul class="error-list">
    {{#each errors}}
    <li>
      {{this}}
    </li>
    {{/each}}
  </ul>
  {{/if}}
		</div>
	</div>
	
